{
  "name": "wfhs-clubs-website",
  "version": "1.0.0",
  "description": "West Forsyth High School Clubs and Organizations Website",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,json}",
    "deploy": "npm run build && gh-pages -d build"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "framer-motion": "^12.23.7",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^5.0.0",
    "postcss": "^8.4.26",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "keywords": [
    "react",
    "school",
    "clubs",
    "organizations",
    "west-forsyth",
    "high-school",
    "students"
  ],
  "author": "WFHS Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wfhs/clubs-website.git"
  },
  "bugs": {
    "url": "https://github.com/wfhs/clubs-website/issues"
  },
  "homepage": "https://wfhs.github.io/clubs-website"
}
